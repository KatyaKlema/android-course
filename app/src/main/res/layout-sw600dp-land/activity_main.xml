<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/article_lst_fragment"
        android:name="com.example.notes.ArticleListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/article_fragment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_article_lst"
        tools:layout_editor_absoluteY="0dp" />

    <fragment
        android:id="@+id/article_fragment"
        android:name="com.example.notes.ArticleFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_article"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>